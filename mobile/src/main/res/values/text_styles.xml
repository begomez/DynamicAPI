<resources>

    <style name="BaseText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">ROBOTO_LIGHT</item>
    </style>

    <style name="BaseText.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BaseText.Subtitle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/subtitle_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BaseText.Content" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/content_size_normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BaseText.ContentLarge" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/content_size_large</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BaseText.Title.White">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="BaseText.Title.Black">
        <item name="android:textColor">@color/colorBlackTrans</item>
    </style>

    <style name="BaseText.Subtitle.White">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="BaseText.Content.White">
        <item name="android:textColor">@color/colorWhiteTrans</item>
    </style>

    <style name="BaseText.Content.Black">
        <item name="android:textColor">@color/colorBlackTrans</item>
    </style>

    <style name="BaseText.ContentLarge.White">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="BaseText.Widget" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">@color/colorWhite</item>

    </style>

</resources>