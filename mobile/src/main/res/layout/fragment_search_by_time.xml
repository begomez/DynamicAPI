<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- PREVIEW -->
    <LinearLayout
        android:id="@+id/search_by_time_preview_container"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.begoandapps.padelapp.components.AppTextView
            android:id="@+id/search_by_time_preview_time"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"

            android:text="@string/search_by_time_default_time"
            />

    </LinearLayout>

    <!-- CLOCK -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TimePicker
            android:id="@+id/search_by_time_clock"

            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

</RelativeLayout>