<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"

    android:id="@+id/activity_tutorial"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.begoandapps.padelapp.view.tutorial.TutorialActivity">

    <!-- PAGER -->
    <android.support.v4.view.ViewPager
        android:id="@+id/content_pager"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

    <!-- INDICATOR -->
    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/content_pager_indicator"

        style="@style/Tutorial.PagerIndicator"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"

        custom:radius="@dimen/tutorial_pager_radius"
        />


</RelativeLayout>
