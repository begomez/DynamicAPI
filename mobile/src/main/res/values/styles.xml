<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="Container.Grey">
        <item name="android:background">@color/colorGreyToolbar</item>
    </style>

    <style name="Container.Green">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.ActionButton">
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Green" parent="Widget.AppCompat.ActionButton">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Button.GreenReverse" parent="Widget.AppCompat.ActionButton">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Button.Round" parent="Widget.AppCompat.ActionButton">
        <item name="android:layout_marginStart">@dimen/login_selection_btn_horiz_margin</item>
        <item name="android:layout_marginLeft">@dimen/login_selection_btn_horiz_margin</item>
        <item name="android:layout_marginEnd">@dimen/login_selection_btn_horiz_margin</item>
        <item name="android:layout_marginRight">@dimen/login_selection_btn_horiz_margin</item>
        <item name="android:paddingLeft">@dimen/login_selection_btn_horiz_padding</item>
        <item name="android:paddingRight">@dimen/login_selection_btn_horiz_padding</item>
    </style>


    <style name="Button.Round.Blue">
        <item name="android:background">@drawable/shape_rectangle_fill_blue</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Button.Round.White">
        <item name="android:background">@drawable/shape_rectangle_fill_white</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!-- TUTORIAL -->
    <style name="Common">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Tutorial" parent="Common">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Tutorial.PagerIndicator">
        <item name="android:layout_marginBottom">@dimen/pager_indicator_marginBottom</item>
    </style>

    <!-- REGISTER -->
    <style name="EditText">
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="img_background">@drawable/line_grey</item>
    </style>

    <!-- SEARCH -->

    <style name="SearchItemIcon">
        <item name="android:layout_marginTop">@dimen/search_selection_icon_margin</item>
        <item name="android:layout_marginBottom">@dimen/search_selection_icon_margin</item>
        <item name="android:layout_marginLeft">@dimen/search_selection_icon_margin</item>
        <item name="android:layout_marginRight">@dimen/search_selection_icon_margin</item>
    </style>

    <style name="SearchItemTitle" parent="BaseText.Content.Black">
        <item name="android:gravity">left</item>
        <item name="android:layout_marginBottom">@dimen/search_selection_title_margin</item>
    </style>

    <style name="SearchItemSubtitle" parent="BaseText.Subtitle.Green">
        <item name="android:gravity">left</item>
        <item name="android:layout_marginTop">@dimen/search_selection_title_margin</item>
    </style>

    <style name="SearchItemArrow">
        <item name="android:layout_marginRight">@dimen/search_selection_arrow_margin</item>
    </style>

    <style name="TimePicker"></style>

    <!-- SEARCH RESULT -->
    <style name="RatingTheme" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorYellow</item>
    </style>

</resources>
