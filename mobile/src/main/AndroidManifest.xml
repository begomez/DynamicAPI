<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.begoandapps.padelapp">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeFullScreen">

        <!-- SPLASH -->
        <activity
            android:name=".view.splash.SplashActivity"
            android:theme="@style/AppThemeFullScreen"
            android:screenOrientation="portrait"
            android:noHistory="true"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <!-- LOGIN -->
        <activity
            android:name=".view.enroll.RegisterActivity"
            android:label="@string/title_login_screen"
            android:screenOrientation="portrait"
            >

        </activity>

        <!-- TUTORIAL -->
        <activity
            android:name=".view.tutorial.TutorialActivity"
            android:label="@string/title_tutorial_screen"
            android:screenOrientation="portrait"
            >

        </activity>

        <!-- DASHBOARD -->
        <activity
            android:name=".view.dashboard.PadelActivity"
            android:label="@string/title_dashboard_screen"
            android:screenOrientation="portrait"
            >

        </activity>

        <!-- SEARCH -->
        <activity
            android:name=".view.search.SearchActivity"
            android:label="@string/title_search"
            android:screenOrientation="portrait">

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable">
            </meta-data>

        </activity>

    </application>

</manifest>