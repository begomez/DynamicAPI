<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"

    android:id="@+id/tutorial_fragment_main_container"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    style="@style/Container.Green">

    <ImageView
        android:id="@+id/tutorial_frag_icon"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/tutorial_icon_margin_top"

        android:src="@drawable/tut_step_1"
        />

    <com.begoandapps.padelapp.components.AppTitleSwitch
        android:id="@+id/tutorial_frag_title"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/tutorial_frag_icon"
        android:layout_marginTop="@dimen/tutorial_title_margin_top"
        />

    <com.begoandapps.padelapp.components.AppTextView
        android:id="@+id/tutorial_frag_subtitle"

        style="@style/BaseText.Content.White"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/tutorial_subtitle_horizontal_pad"
        android:paddingRight="@dimen/tutorial_subtitle_horizontal_pad"

        android:layout_below="@id/tutorial_frag_title"
        android:layout_marginTop="@dimen/tutorial_subtitle_margin_top"

        tools:text="Subtitle"
        />

    <include
        layout="@layout/component_main_button"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        />

</RelativeLayout>