<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <!-- ICON -->
    <ImageView
        android:id="@+id/fragment_no_reservation_icon"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:src="@drawable/splash_icon"
        />

    <!-- BTN -->
    <com.begoandapps.padelapp.components.AppButton
        android:id="@+id/fragment_no_reservation_btn_make_reservation"

        style="@style/Button.GreenReverse"

        android:layout_width="0dp"
        android:layout_height="@dimen/button_h"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:text="@string/btn_make_reservation"
        />

</android.support.constraint.ConstraintLayout>