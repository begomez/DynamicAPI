<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/search_selection_item_container"

    android:layout_marginTop="@dimen/default_margin"
    android:layout_marginBottom="@dimen/default_margin"
    android:layout_marginLeft="@dimen/default_margin"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- ICON -->
    <ImageView
        android:id="@+id/search_selection_item_icon"

        style="@style/SearchItemIcon"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:src="@drawable/ic_calendar"
        />

    <!-- TITLE -->
    <com.begoandapps.padelapp.components.AppTextView
        android:id="@+id/search_selection_item_title"

        style="@style/SearchItemTitle"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/search_selection_item_icon"
        app:layout_constraintLeft_toRightOf="@+id/search_selection_item_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/search_selection_item_subtitle"
        app:layout_constraintBaseline_toBaselineOf="@id/search_selection_item_icon"

        tools:text="@string/search_subtitle_where"
        />

    <!-- SUBTITLE -->
    <com.begoandapps.padelapp.components.AppTextView
        android:id="@+id/search_selection_item_subtitle"

        style="@style/SearchItemSubtitle"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/search_selection_item_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_selection_item_title"

        tools:text="@string/search_default_where_value"
        app:layout_constraintHorizontal_bias="0.0" />

    <!-- ARROW -->
    <ImageView
        android:id="@+id/search_selection_item_arrow"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        style="@style/SearchItemArrow"

        app:layout_constraintTop_toTopOf="@+id/search_selection_item_title"
        app:layout_constraintBottom_toBottomOf="@+id/search_selection_item_subtitle"
        app:layout_constraintRight_toRightOf="parent"

        android:src="@drawable/ic_arrow_right"
        />

    <!-- SEP -->
    <View
        android:id="@+id/search_selection_item_separator"

        android:layout_width="0dp"
        android:layout_height="1dp"

        app:layout_constraintTop_toBottomOf="@+id/search_selection_item_subtitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:background="@color/colorGrey"
        />

</android.support.constraint.ConstraintLayout>