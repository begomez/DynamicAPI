<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/search_result_item_main_container"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <!-- IMAGE & DATA -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        >

        <!-- IMAGE -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/result_item_img_h"

            android:scaleType="centerCrop"

            android:src="@drawable/padel_club_back"
            />

        <!-- DATA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/result_item_img_h"

            android:orientation="vertical"
            >

            <!-- NAME -->
            <com.begoandapps.padelapp.components.AppTextView
                android:id="@+id/search_result_item_padel_club_name"

                style="@style/BaseText.Content.White"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                tools:text="@string/dummy_padel_club_name"
                />

            <!-- RATING -->
            <RatingBar
                android:id="@+id/search_result_item_padel_club_rating"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                style="@style/RatingTheme"

                android:foregroundTint="@color/colorYellow"

                android:rating="1"
                android:stepSize="1"
                android:numStars="5"
                />

            <!-- TIMETABLE -->
            <com.begoandapps.padelapp.components.AppTextView
                android:id="@+id/search_result_item_padel_club_time"

                style="@style/BaseText.Content.White"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                tools:text="@string/dummy_padel_club_time"
                />

        </LinearLayout>

    </FrameLayout>


</RelativeLayout>