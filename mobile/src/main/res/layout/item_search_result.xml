<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/search_result_item_main_container"

    android:layout_width="match_parent"
    android:layout_height="@dimen/result_item_img_h">


    <!-- IMAGE & DATA -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        >

        <!-- IMAGE -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scaleType="centerCrop"

            android:src="@drawable/padel_club_back"
            />

        <!-- DATA -->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/search_result_item_data_container"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <!-- NAME -->
            <com.begoandapps.padelapp.components.AppTextView
                android:id="@+id/search_result_item_padel_club_name"

                style="@style/BaseText.Content.White"

                app:layout_constraintTop_toTopOf="@id/search_result_item_data_container"
                app:layout_constraintLeft_toLeftOf="@id/search_result_item_data_container"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                tools:text="@string/dummy_padel_club_name"
                />

            <!-- RATING -->
            <RatingBar
                android:id="@+id/search_result_item_padel_club_rating"

                style="@style/RatingTheme"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toBottomOf="@id/search_result_item_padel_club_name"

                android:rating="1"
                android:stepSize="1"
                android:numStars="5"
                />

            <!-- TIMETABLE -->
            <com.begoandapps.padelapp.components.AppTextView
                android:id="@+id/search_result_item_padel_club_time"

                style="@style/BaseText.Content.White"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toBottomOf="@id/search_result_item_padel_club_rating"

                tools:text="@string/dummy_padel_club_time"
                />



            <!-- DISTANCE -->
            <com.begoandapps.padelapp.components.AppTextView
                android:id="@+id/search_result_item_padel_distance"

                style="@style/BaseText.Content.White"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toBottomOf="@id/search_result_item_padel_club_time"
                app:layout_constraintLeft_toLeftOf="@id/search_result_item_data_container"

                tools:text="@string/dummy_padel_club_distance"
                />

            <!-- TYPE -->
            <com.begoandapps.padelapp.components.AppTextView
                android:id="@+id/search_result_item_padel_type"

                style="@style/BaseText.Content.White"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toBottomOf="@id/search_result_item_padel_club_time"
                app:layout_constraintLeft_toRightOf="@id/search_result_item_padel_distance"

                tools:text="@string/dummy_padel_club_type"
                />

            <!-- BANNER -->
            <com.begoandapps.padelapp.components.AppTextView
                android:id="@+id/search_result_item_padel_banner"

                android:background="@color/colorWhite"

                android:layout_width="0dp"
                android:layout_height="100dp"

                app:layout_constraintTop_toTopOf="@id/search_result_item_data_container"
                app:layout_constraintLeft_toLeftOf="@+id/search_result_item_padel_btn"
                app:layout_constraintRight_toRightOf="@id/search_result_item_data_container"

                android:text="@string/dummy_padel_club_price"
                />

            <!-- BTN -->
            <com.begoandapps.padelapp.components.AppButton
                android:id="@+id/search_result_item_padel_btn"

                style="@style/Button.GreenReverse"

                android:layout_width="wrap_content"
                android:layout_height="0dp"

                app:layout_constraintTop_toBottomOf="@id/search_result_item_padel_banner"
                app:layout_constraintRight_toRightOf="@id/search_result_item_data_container"
                app:layout_constraintBottom_toBottomOf="@id/search_result_item_data_container"

                android:text="@string/btn_make_reservation_in_club"
                />

        </android.support.constraint.ConstraintLayout>

    </FrameLayout>

</LinearLayout>